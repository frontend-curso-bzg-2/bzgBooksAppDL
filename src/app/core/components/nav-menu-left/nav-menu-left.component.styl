a
    outline none
    text-decoration none
    color black
    &:active
        color red

.nav-left
    margin 15px

.nav-left
    span
        margin-left 5px

modal
    display none
    width 100%
    height 100%      
    margin 0px

    
.modal 
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 1000
    overflow auto
    display inline-table    
    width: 450px
    height 350px
    margin 200px auto auto auto
    text-align center

.modal-body 
    padding 20px
    background #fff
    margin 40px
    border-radius 10px 10px 10px 10px
    
.modal-background
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    background-color #000
    opacity 0.75
    z-index 900

body
    &.modal-open
        overflow hidden

.btnPopup
    margin 10px

.title
    background-color #e9ecef

:host-context(.aside-close)
    span
        display none

@media screen and (max-width: 600px)
    span
        display none