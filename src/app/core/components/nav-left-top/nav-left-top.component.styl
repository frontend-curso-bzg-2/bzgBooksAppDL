
.background-top
	background-color #e9ecef
	margin-right 0px

.containerImage
	width: 50px;
	height: 50px;
	margin: 15px 15px 15px 15px;

.userImage 
	width: 50px;
	height: 50px;
	border: 1px solid;
	border-radius: 10px 10px 10px 10px;
	font-size: 48px;	
	display: flex;	
	justify-content: center;
	box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);

.userName
	margin-top 15px
	display flex
	justify-content center

.date
	display flex
	justify-content center

.userData
	padding-left 0px
	padding-right 0px

.noPicture
	display none

:host-context(.aside-close)
	.userData
		display none
	.userImage 
		width 40px
		height 30px
		font-size 28px
	.containerImage
		width 40px
		height 30px

@media screen and (max-width: 600px)
	.userData
		display none
	.userImage
		width 40px
		height 30px
		font-size 28px
	.containerImage
		width 40px
		height 30px

@media screen and (max-width: 825px)
	.userImage 		
		width 50px
		height 50px		
	.containerImage
		width 50px
		height 50px